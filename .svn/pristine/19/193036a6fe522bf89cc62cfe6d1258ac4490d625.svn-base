<script>
	var hots = document.querySelectorAll('.hots');
	var p = document.querySelectorAll('.hots p');
	for(var i=0;i<hots.length;i++){
		hots[i].index = i;
		hots[i].onclick=function(){
			for(var j=0;j<p.length;j++){
				p[j].style.color = '#333';
			}
			p[this.index].style.color="#cc0110";
		}
	}
</script>
