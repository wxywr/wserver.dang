        jQuery('.map-list .list-a .lun .img img').eq(r).siblings().show();
    }

    jQuery(".map-list .list-a .lun .left").click(function(){
        r--;
        lunbo();
        if(r<=0){
            r=2;
        }
    });
    jQuery(".map-list .list-a .lun .right").click(function(){
        r++;
        lunbo();
        if(r>=1){
            r=-1;
        }
    });

    var rr=0;
